<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
<style>
  .row { margin-bottom: 36px; }
  img { box-shadow: 4px 4px 4px gray;}
</style>

<% p = Place.find_by(id: params["id"]) %>

<div class="container">

  <div class="row">
    <div class="col-sm-12">
      <h2><%= p.title %></h2>
      <h3><%= link_to "edit", "/places/#{p.id}/edit" %></h3>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6">
      <img class="img-responsive" src=<%= p.photo %>>
    </div>
    <div class="col-md-6">
      <p class="lead">
        <%= p.description %>

      </p>
    </div>
  </div>

</div>
